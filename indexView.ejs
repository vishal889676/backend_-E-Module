<h1>Students List</h1>
<a href="/add">Add New Student</a>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Student ID</th>
      <th>Enrollment Date</th>
      <th>Department</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% students.forEach(student => { %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.studentId %></td>
        <td><%= student.enrollmentDate.toDateString() %></td>
        <td><%= student.department %></td>
        <td>
          <a href="/edit/<%= student._id %>">Edit</a>
          <form action="/delete/<%= student._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
